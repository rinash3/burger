
<div class="container">

<div class="row">
		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
      <br>
		</div>
<h1 class="text-center">Eat The Burger</h1>
<br>
<p> Add the burger you want to eat and click submit</p>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  
     <button type="submit">Add Burger</button>
  </div>

 
</form>

</div>
<br>

 <div class="row">
    <div class="col-md-6">
      <h2 class="header">Burgers to Eat</h2>
      <ul>
  {{#each burgers}}
    {{#unless  this.devoured}}
    {{this.id}}.
			{{this.burger_name}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
    </div>
 <div class="col-md-6">
    <h2 class="header">Burgers Eaten</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    {{this.id}}.
			        {{this.burger_name}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
 </div>
 </div>