<div class="container">

<div class="row">
		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
      <br>
		</div>

<h1 class="text-center">Eat The Burger</h1>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>
  <div class="button">
  <button type="submit">Submit</button>
  </div>

</form>
</div>
<br>
<p> add the burger you want to eat and click submit</p>
 <div class="row">
    <div class="col-md-6">
      <h2 class="header">Burgers to Eat</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

        
</div>

  <div class="col-md-6">
    <h2 class="header">Burgers Eaten</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
